generator client {
  provider = "prisma-client-js"
  output   = "../generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Blog {
  id        String   @id @default(uuid())
  title     String
  subTitle  String
  slug      String   @unique
  content   String
  bannerUrl String
  video     String?
  tags      Tags[]
  topics    Topics[]
  createdAt DateTime @default(now())
  updatedAt DateTime @default(now())
}

